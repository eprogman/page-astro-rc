---
const { title, description, image, card } = Astro.props;
import Cardbutton from "./Cardbutton.astro";
---

<Cardbutton card={card}>
    <div class="flex flex-col items-center text-white">
        <img src={image} alt="" />
        <h3>{title}</h3>
        <p>{description}</p>
    </div>
</Cardbutton>

<style>
    img {
        width: 180px;
        height: 130px;
        border-radius: 10px;
    }

    h3 {
        font-size: 1.8em;
    }
    p {
        font-size: 0.8em;
    }
</style>
