---
const { card } = Astro.props;
---

<a href={card}><slot /></a>

<style>
    :root {
        --text-prin: #f2f2f2;
        --text-sec: #e0ffff;
        --fondo: #7fffd4;
        --fondo-sec: #14111d;
        --texto-hover: #1a084e;
        --blue-border: #3d8df4;
        --green-text: #27d831;
    }
    a {
        cursor: pointer;
        border-radius: 4px;
        text-align: center;
        text-decoration: none;
        border: 1px solid #f5f5f5;
        padding: 20px;
        width: 80%;
    }
    a:hover {
        background: linear-gradient(to right, #ef4444, #b45309, #f59e0b);
        color: var(--text-sec);
        transition: 0.6s all;
        opacity: 0.8;
        rotate: 1deg;
        transform: scale(1, 0.9);
    }
</style>
